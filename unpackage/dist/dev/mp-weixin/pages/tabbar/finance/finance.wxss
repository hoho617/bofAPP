.panel-item {
	border-radius: 10rpx;
	padding:0 24rpx 24rpx;
}
.panel-title {
	height: 80rpx;
	font-size: 32rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	padding-left:6rpx;
}
.panel-title image {
	width:44rpx;
}
.grid-box {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-flex-wrap: wrap;
	    -ms-flex-wrap: wrap;
	        flex-wrap: wrap;
	border-top:2rpx solid #eee;
}
.grid-box .grid-col-3 {
	width:25%;
	border-right:2rpx solid #eee;
	border-bottom:2rpx solid #eee;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.grid-box .grid-col-3:nth-child(4n+1) {
	border-left:2rpx solid #eee;
}
.grid-box .grid-col-3 navigator {
	width:100%;
	padding:30rpx 0;
	text-align: center;
	color:#333;
	font-size: 34rpx;
}
.grid-box .grid-col-3 navigator text {
	font-size: 60rpx;
}
.grid-box .grid-col-3 navigator view {
	margin-top:16rpx;
}
