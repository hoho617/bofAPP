<view class="content uni-tab-bar" bind:__l="__l"><view class="selectbox"><scroll-view class="uni-swiper-tab" id="tab-bar" scroll-x scroll-left="{{scrollLeft}}" lower-threshold="20"><block wx:for="{{tabBars}}" wx:for-item="tab" wx:for-index="index" wx:key="tab.id"><view class="{{['swiper-tab-list',tabIndex==index?'active':'']}}" id="{{'tabNum'+tab.id}}" data-current="{{index}}" data-catogory-id="{{tab.id}}" data-event-opts="{{[['tap',[['tabTab',['$event']]]]]}}" bindtap="__e">{{''+tab.name+''}}</view></block></scroll-view></view><swiper class="swiper-box" current="{{tabIndex}}" duration="300" data-event-opts="{{[['change',[['changeTab',['$event']]]]]}}" bindchange="__e"><block wx:for="{{orderList}}" wx:for-item="tab" wx:for-index="index1" wx:key="index1"><swiper-item><scroll-view class="list" scroll-y data-event-opts="{{[['scrolltolower',[['loadMore',['$event']]]]]}}" bindscrolltolower="__e"><view class="goods-list"><block wx:for="{{tab.data}}" wx:for-item="item" wx:for-index="index2" wx:key="index2"><block><view class="order-item"><view class="order-item-top"><view class="order-no">{{"订单 "+item.orderSn}}</view><view class="order-status">{{(item.status==0?'待付款':item.status==1?'待发货':item.status==2?'待收货':item.status==3?'已完成':item.status==4?'已取消':'已退货')+''}}<text class="icon"></text></view></view><block wx:for="{{item.goodsList}}" wx:for-item="good" wx:for-index="index3" wx:key="index3"><block><view class="order-item-middle"><view class="img-box"><my-image data="{{good.goodsPic}}" modeData="scaleToFill"></my-image></view><view class="details"><view class="goods-name overflow-ellipsis">{{good.goodsName}}</view><view class="option-text">{{good.goodsOption?good.goodsOption:''}}</view><view class="goods-datas"><view class="price">{{"￥"+good.price}}</view><view class="num">{{"x"+good.total}}</view></view></view></view></block></block><view class="order-item-bottom"><view data-event-opts="{{[['tap',[['toOrderDetail',[item.id]]]]]}}" class="btn-item grey-btn" bindtap="__e">查看详情</view><block wx:if="{{item.status==0}}"><view data-event-opts="{{[['tap',[['toPayOrder',[item.id,item.orderSn,item.payAmount]]]]]}}" class="btn-item red-btn" bindtap="__e">支付订单</view></block><block wx:if="{{item.status==0}}"><view data-event-opts="{{[['tap',[['toCancelPay',[item.id]]]]]}}" class="btn-item normal-btn" bindtap="__e">取消订单</view></block><block wx:if="{{item.status==2}}"><view class="btn-item red-btn">确认收货</view></block></view></view></block></block></view><uni-load-more loadingType="{{loadingType}}" contentText="{{contentText}}"></uni-load-more></scroll-view></swiper-item></block></swiper></view>