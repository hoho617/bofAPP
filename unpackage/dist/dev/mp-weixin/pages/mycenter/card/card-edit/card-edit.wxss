page{
  height: 100%;
  background-color: #f4f4f4;
}
view {
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.scroll-view {
	position: absolute;
	top:0;
	bottom:100rpx;
	width:100%;
	/* background-color: #f5f5f5; */
	z-index: 99;
}
.form-wrap {
}
.form-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	padding:0 24rpx;
	position: relative;
	height: 88rpx;
}
.form-item .title {
	width:180rpx;
	/* text-align: right; */
}
.form-item:after {
	content:"";
	display: block;
	height: 2rpx;
	background-color: #eee;
	left:24rpx;
	position: absolute;
	bottom:0;
	right:0;
}
.uni-input {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.uni-input image {
	width:40rpx;
	height: 40rpx;
}
.address-info {
	color:#808080;
	padding:0 25rpx;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.right-arrow {
	font-size: 34rpx;
	color:#ccc;
}
.fixed-footer {
	position: fixed;
	bottom:0;
	width:100%;
	height: 98rpx;
	line-height: 98rpx;
}
.red-btn-bottom {
	background-color: #db4c3f;
	color:#fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	height: 100%;
	font-size: 30rpx;
}



