<view class="content" bind:__l="__l"><image class="img-bg" src="/static/loginBg.png"></image><view class="page-bg"><view class="logo-content"><image class="logo" src="/static/logo.png"></image></view><view class="form-content"><view class="input-group"><view class="input-row border margin-bottom"><text class="icon input-icon-account"></text><input type="text" placeholder="请输入会员账号" data-event-opts="{{[['input',[['__set_model',['account','$event',[]]]]]]}}" value="{{account}}" bindinput="__e"/></view><view class="input-row border margin-bottom"><text class="icon input-icon-psd"></text><input type="number" placeholder="请输入手机号码" data-event-opts="{{[['input',[['__set_model',['phone','$event',[]]]]]]}}" value="{{phone}}" bindinput="__e"/><block wx:if="{{!isSend}}"><button class="send-btn" type="primary" data-event-opts="{{[['tap',[['getCode',['$event']]]]]}}" bindtap="__e">获取验证码</button></block><block wx:else><button class="sended-btn send-btn" type="primary">{{seconds+"s后重新发送"}}</button></block></view><view class="input-row border"><text class="icon input-icon-psd"></text><input type="number" placeholder="请输入验证码" data-event-opts="{{[['input',[['__set_model',['code','$event',[]]]]]]}}" value="{{code}}" bindinput="__e"/></view></view><view class="btn-row"><button class="primary" type="primary" data-event-opts="{{[['tap',[['toSetPassword',['$event']]]]]}}" bindtap="__e">下一步</button></view></view></view></view>