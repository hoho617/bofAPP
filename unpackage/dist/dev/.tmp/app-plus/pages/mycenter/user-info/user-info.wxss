page{
  height: 100%;
  background-color: #f4f4f4;
}
view {
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.scroll-view {
	position: absolute;
	top:0;
	bottom:100rpx;
	width:100%;
	/* background-color: #f5f5f5; */
	z-index: 99;
}
.info-block {
	padding:0 20rpx;
}
.block-title {
	height: 80rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.block-wrap {
}
.block-info-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	padding:0 24rpx;
	position: relative;
	height: 88rpx;
}
.block-info-item .title {
	width:180rpx;
	font-size: 30rpx;
	/* text-align: right; */
}
.block-info-item:after {
	content:"";
	display: block;
	height: 2rpx;
	background-color: #eee;
	left:24rpx;
	position: absolute;
	bottom:0;
	right:0;
}
.block-info-item .value {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	color:#999;
}
.fixed-footer {
	position: fixed;
	bottom:0;
	width:100%;
	height: 98rpx;
	line-height: 98rpx;
}
.red-btn-bottom {
	background-color: #db4c3f;
	color:#fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	height: 100%;
	font-size: 30rpx;
}



